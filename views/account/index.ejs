<% if (title) { %>
  <h1><%= title %></h1>
<% } %>

<!-- Flash Messages -->
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<% const account = (locals && locals.accountData) ? locals.accountData : null; %>
<% if (account) { %>
  <h2>Welcome <%= account.account_firstname %></h2>
  <p><a href="/account/update/<%= account.account_id %>">Update Account Information</a></p>
  <% if (account.account_type === 'Employee' || account.account_type === 'Admin') { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv/">Manage Inventory</a></p>
  <% } %>
<% } else { %>
  <p>You're logged in.</p>
<% } %>
