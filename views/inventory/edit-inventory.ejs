<% if (title) { %>
  <h1><%= title %></h1>
<% } %>

<!-- Flash Messages -->
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form action="/inv/update" method="post" id="updateForm">
  <input type="hidden" name="inv_id" value="<%= inv_id %>">
  <div>
    <label for="classificationList">Classification <span class="required">*</span></label>
    <div><%- classificationList %></div>
  </div>

  <div>
    <label for="inv_make">Make <span class="required">*</span></label>
    <input type="text" id="inv_make" name="inv_make" required value="<%= inv_make %>">
  </div>

  <div>
    <label for="inv_model">Model <span class="required">*</span></label>
    <input type="text" id="inv_model" name="inv_model" required value="<%= inv_model %>">
  </div>

  <div>
    <label for="inv_year">Year <span class="required">*</span></label>
    <input type="text" id="inv_year" name="inv_year" required pattern="\d{4}" value="<%= inv_year %>">
  </div>

  <div>
    <label for="inv_description">Description <span class="required">*</span></label>
    <textarea id="inv_description" name="inv_description" required><%= inv_description %></textarea>
  </div>

  <div>
    <label for="inv_image">Image Path <span class="required">*</span></label>
    <input type="text" id="inv_image" name="inv_image" required value="<%= inv_image %>">
  </div>

  <div>
    <label for="inv_thumbnail">Thumbnail Path <span class="required">*</span></label>
    <input type="text" id="inv_thumbnail" name="inv_thumbnail" required value="<%= inv_thumbnail %>">
  </div>

  <div>
    <label for="inv_price">Price <span class="required">*</span></label>
    <input type="number" id="inv_price" name="inv_price" required step="1" value="<%= inv_price %>">
  </div>

  <div>
    <label for="inv_miles">Miles <span class="required">*</span></label>
    <input type="number" id="inv_miles" name="inv_miles" required step="1" value="<%= inv_miles %>">
  </div>

  <div>
    <label for="inv_color">Color <span class="required">*</span></label>
    <input type="text" id="inv_color" name="inv_color" required value="<%= inv_color %>">
  </div>

  <button type="submit" disabled>Update Vehicle</button>

  <!-- inv_id hidden is declared at the top of the form; duplicate removed -->
</form>

<p><a href="/inv/">Back to Management</a></p>

<script src=".."></script>
